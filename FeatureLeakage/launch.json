{
  "configurations": [
    {
      "name": "Python: Remote Debug",
      "type": "python",
      "host": "127.0.0.1",
      "request": "attach",
      "port": 42019,
      "subProcess": true,
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/root/work"
        }
      ]
    },
    {
      "name": "utkface",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "python": "/home/ottersome/miniconda3/envs/research/bin/python",
      "stopOnEntry": false,
      "debugOptions": [],
      "program": "${workspaceFolder}/main_simple.py"
    }
  ]
}
